<Alloy>
	<Tab id="tabStatistics" icon="/icons/statistics.png" title="Statistics" onFocus="onFocus">	
	<Window class="container" title="My statistics" layout="vertical">
		<View layout="composite" id="mainView" class="statistcsMainView" height="100"> 
			<ImageView image="images/user.png" class="userImage" id="userImage"></ImageView>
			<Label id="name" class="labelUser title" top="0"></Label>
			<Label id="points" class="labelUser" top="40"></Label>
			<Label id="co2saved" class="labelUser" top="60"></Label>
			<Label id="distance" class="labelUser" top="80"></Label>
		</View>
		<TableView id="tableView">
			<Widget id="ptr" src="nl.fokkezb.pullToRefresh" onRelease="pullToRefresh" />
		</TableView>
	</Window>
	</Tab>
</Alloy>